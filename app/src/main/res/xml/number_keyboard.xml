<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0dp"
    android:keyWidth="24.5%p"
    android:keyHeight="55dp"
    android:verticalGap="0dp">

    <!-- First Row: 1, 2, 3 -->
    <Row android:rowEdgeFlags="top">
        <Key
            android:codes="49"
            android:keyEdgeFlags="left"
            android:keyLabel="1" />
        <Key
            android:codes="50"
            android:keyLabel="2ABC" />
        <Key
            android:codes="51"
            android:keyLabel="3DEF" />
        <Key
            android:codes="45"
            android:keyEdgeFlags="right"
            android:keyLabel="\u002D" />
    </Row>

    <!-- Second Row: 4, 5, 6 -->
    <Row>
        <Key
            android:codes="52"
            android:keyEdgeFlags="left"
            android:keyLabel="4GHI" />
        <Key
            android:codes="53"
            android:keyLabel="5JKL" />
        <Key
            android:codes="54"
            android:keyLabel="6MNO" />
        <Key
            android:codes="32"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_spacebar" />
    </Row>

    <!-- Third Row: 7, 8, 9 -->
    <Row>
        <Key
            android:codes="55"
            android:keyEdgeFlags="left"
            android:keyLabel="7PQRS" />
        <Key
            android:codes="56"
            android:keyLabel="8TUV" />
        <Key
            android:codes="57"
            android:keyLabel="9WXYZ" />
        <Key
            android:codes="-5"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_clear" />
    </Row>

    <!-- Fourth Row: ., 0, delete -->
    <Row
        android:rowEdgeFlags="bottom"
        android:verticalGap="1.5%p">
        <Key
            android:codes="42"
            android:keyEdgeFlags="left"
            android:keyLabel="*#" />
        <Key
            android:codes="48"
            android:keyLabel="0+" />
        <Key
            android:codes="46"
            android:keyLabel="." />
        <Key
            android:codes="-4"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_check" />
    </Row>

</Keyboard>
