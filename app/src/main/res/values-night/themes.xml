<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomKeyboard.dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Keyboard_view">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Status_bar_view">
        <item name="android:background">@color/statusBar_background_dark</item>
    </style>

    <style name="Emoji_button_style">
        <item name="android:backgroundTint">@color/emoji_button_dark</item>
    </style>

    <style name="Status_bar_text_style">
        <item name="android:textColor">@color/status_title_dark</item>
    </style>

    <style name="Setting_icon_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Emoji_bar_style">
        <item name="android:background">@drawable/bottom_border_dark</item>
    </style>

    <style name="Emoji_bar_icon_style">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Grid_background_style">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Keyboard_background_style">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:keyBackground">@drawable/custom_key</item>
    </style>

    <style name="Popup_background_style">
<!--        <item name="android:background">@color/black</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:keyTextColor">@color/white</item>
    </style>

</resources>